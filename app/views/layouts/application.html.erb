<!DOCTYPE html>
<html>
  <head>
    <title>StateofchainApi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'bundled/application', 'data-turbolinks-track': 'reload', 'async': 'async', 'defer': 'defer' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <%= react_component 'components.Alert', { message: flash[:notice], type: 'success' } %>
    <% elsif flash[:error] %>
      <%= react_component 'components.Alert', { message: flash[:error], type: 'error' } %>
    <% end %>
    <%= react_component 'components.Notification', authenticity_token: form_authenticity_token %>
    <%= render partial: 'layouts/header' %>
    <%= yield %>
  </body>
</html>
